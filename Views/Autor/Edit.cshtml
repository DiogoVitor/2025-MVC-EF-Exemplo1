@model MVC_EF.Exemplo1.Models.Autor

@{
    ViewData["Title"] = "Editar Autor";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="AutorNome" class="control-label"></label>
        <input asp-for="AutorNome" class="form-control" />
        <span asp-validation-for="AutorNome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AutorDataNascimento" class="control-label"></label>
        <input asp-for="AutorDataNascimento" class="form-control" />
        <span asp-validation-for="AutorDataNascimento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AutorEmail" class="control-label"></label>
        <input asp-for="AutorEmail" class="form-control" />
        <span asp-validation-for="AutorEmail" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index", "Autor")" class="btn btn-secondary">Cancelar</a>
</form>